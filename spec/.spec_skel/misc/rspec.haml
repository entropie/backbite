.post
  :position relative

.permalink .pl
  :color #63A693
  :font-size 35px
  :position absolute
  :top -28px
  :right -30px
  :text-decoration none
  :padding 0px
  :width 20px
  &:hover
    :color yellow
    :font-weight bold

#red .permalink .pl
  :left -35px
  :top -5px
  :bottom 0px

#red .tags .tag
  :color #64798a
  :text-decoration none
  :background-color #afc7dc
  :padding 0px 3px 0px 3px

#black .tags .tag
  :color #d2d425
  :font-style italic
  :text-decoration none
  :background-color #3175CD
  :padding 0px 3px 0px 3px

#black .tags .tag
  :font-family tahoma
  &:hover
    :background-color #409df4

#red .tags .tag
  :font-family tahoma
  :font-style italic
  &:hover
    :background-color #409df4
    :color gold
